{% assign background_color = section.settings.background_color %}
{% assign padding = section.settings.padding %}
<div id="recently-viewed-products" class="recently-viewed-products page-width" 
  style="background-color: {{ background_color }}; padding: {{ padding }};" >
  <h2 class="inline-richtext h2">{{ section.settings.heading }}</h2>
    <ul id="recently-viewed-products-list" class="grid product-grid grid--4-col-desktop grid--2-col-tablet-down">
 
    <!-- Recently viewed products will be populated here by JavaScript -->
  </ul>
</div>

{% schema %}
{
  "name": "Recently Viewed Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Recently Viewed Products"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#fff"
    },
    {
      "type": "text",
      "id": "padding",
      "label": "Wrapper Padding",
      "default": "0 0 0 0"
    }
  ]
}
{% endschema %}
